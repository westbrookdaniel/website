{
  "name": "website",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "tsx build.ts && npx @tailwindcss/cli -i ./tailwind.css -o ./_site/public/index.css",
    "dev": "concurrently \"bunx serve _site\" \"tsx --watch build.ts\" \"npx tailwindcss -i ./tailwind.css -o ./_site/public/index.css --watch\"",
    "lint": "prettier . --write"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "chokidar": "^4.0.3",
    "glob": "^11.0.3",
    "marked": "^16.2.1",
    "prism-themes": "^1.9.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.5",
    "tsx": "^4.20.5"
  },
  "packageManager": "pnpm@8.9.2"
}
